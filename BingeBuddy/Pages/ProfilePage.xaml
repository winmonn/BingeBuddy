<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BingeBuddy.Pages.ProfilePage"
             Title="My Profile"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Top Header -->
        <Grid BackgroundColor="#2C3E50" Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Source="profile_icon.png" HeightRequest="24" WidthRequest="24"/>
        <Label Text="Profile"
               Grid.Column="1"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="White"
               VerticalOptions="Center"
               Margin="10,0,0,0"/>
        </Grid>

    <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="20" Spacing="20">
                <StackLayout Orientation="Horizontal" Spacing="15">
                    <Image Source="default_avatar.png"
                           HeightRequest="80"
                           WidthRequest="80"
                           Aspect="AspectFill"
                           VerticalOptions="Start"/>
                    <StackLayout>
                        <Label Text="Karen"
                               FontSize="22"
                               FontAttributes="Bold"/>
                        <Label Text="@karen_710"
                               TextColor="Gray"/>
                    </StackLayout>
                </StackLayout>

                <Button Text="Edit Profile"
                        BackgroundColor="#2C3E50"
                        TextColor="White"
                        CornerRadius="20"
                        HorizontalOptions="End"
                        WidthRequest="120"
                        Clicked="OnEditProfileClicked"/>

                <Border Stroke="LightGray" StrokeThickness="1" BackgroundColor="White" 
                 StrokeShape="RoundRectangle 10" Padding="10">
                    <VerticalStackLayout>
                        <Label Text="Share something..." FontSize="14"/>
                        <Editor x:Name="StatusEditor"
                HeightRequest="60"
                Placeholder="What's on your mind?" />
                        <Button Text="Post"
                BackgroundColor="#2C3E50"
                TextColor="White"
                Clicked="OnPostStatusClicked"/>
                    </VerticalStackLayout>
                </Border>


                <Label Text="| Ratings"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Label Text="No ratings yet" TextColor="Gray"/>
                <Label Text="| Watchlist"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Label Text="No watchlist yet" TextColor="Gray"/>
                <Label Text="| List"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Label Text="No list yet" TextColor="Gray"/>
            </StackLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <!--<Grid Row="2"
              BackgroundColor="Black"
              Padding="10"
              ColumnSpacing="30"
              HeightRequest="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ImageButton Source="icon_home.png" Grid.Column="0" BackgroundColor="Transparent"/>
            <ImageButton Source="icon_search.png" Grid.Column="1" BackgroundColor="Transparent"/>
            <ImageButton Source="icon_bookmark.png" Grid.Column="2" BackgroundColor="Transparent"/>
            <ImageButton Source="icon_profile.png" Grid.Column="3" BackgroundColor="Transparent"/>
            <ImageButton Source="icon_more.png" Grid.Column="4" BackgroundColor="Transparent"/>
        </Grid>-->
    </Grid>
</ContentPage>
