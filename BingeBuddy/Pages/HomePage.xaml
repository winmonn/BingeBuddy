<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:BingeBuddy.ViewModels"
    x:Class="BingeBuddy.Pages.HomePage"
    BackgroundColor="#2C3E50"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <viewmodels:MovieViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <VerticalStackLayout Spacing="10" Padding="10">
            <Grid BackgroundColor="#2C3E50" Padding="10" HeightRequest="60">
                <Image Source="logo.png" HeightRequest="40" HorizontalOptions="Start" />
                <SearchBar Placeholder="Search" HorizontalOptions="FillAndExpand" />
            </Grid>

            <Label Text="WATCHLIST"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <Grid Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Progress"
                        TextColor="White"
                        BackgroundColor="#34495E"
                        Command="{Binding ShowProgressCommand}" />
                <Button Text="Upcoming"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        Grid.Column="1"
                        Command="{Binding ShowUpcomingCommand}" />
            </Grid>

            <ScrollView>
                <VerticalStackLayout>
                    <CollectionView ItemsSource="{Binding Movies}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="#34495E" CornerRadius="10" Padding="10" Margin="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Image Source="{Binding Thumbnail}" Grid.Column="0" HeightRequest="100" WidthRequest="80" Aspect="AspectFill" />
                                        <StackLayout Grid.Column="1" Spacing="5">
                                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16" TextColor="White" />
                                            <Label Text="{Binding Description}" FontSize="12" TextColor="Gray" LineBreakMode="WordWrap" />
                                            <StackLayout Orientation="Horizontal" Spacing="10">
                                                <Label Text="Genre: " FontSize="12" TextColor="Gray" />
                                                <Label Text="{Binding Genre}" FontSize="12" TextColor="Gray" />
                                            </StackLayout>
                                            <ProgressBar Progress="{Binding Progress}" HeightRequest="10" BackgroundColor="Gray" />
                                        </StackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>