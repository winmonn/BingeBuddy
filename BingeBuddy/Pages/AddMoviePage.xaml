<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="BingeBuddy.Pages.AddMoviePage"
             x:Name="AddMoviePageRoot"
             xmlns:local="clr-namespace:BingeBuddy.Pages"
             BackgroundColor="#2C3E50">
    <Grid RowDefinitions="Auto,Auto,Auto,*">
        <!-- Search Bar with Filter Icon -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="10">
            <SearchBar Grid.Column="0"
                   Placeholder="Search movies..." 
                   Text="{Binding SearchText}" 
                   TextColor="White" 
                   PlaceholderColor="Gray" 
                   BackgroundColor="#1F2A38" />
            <ImageButton Grid.Column="1"
                     Source="filter.svg"
                     HeightRequest="20"
                     WidthRequest="20"
                     Margin="5,0,0,0"
                     VerticalOptions="Center"
                     HorizontalOptions="End"
                     CornerRadius="20"
                     BackgroundColor="Transparent"
                     Clicked="OnFilterClicked"/>
        </Grid>

        <!-- Genre Buttons -->
        <ScrollView Grid.Row="1" Orientation="Horizontal" Margin="10,0,10,10" IsVisible="{Binding IsGenrePickerVisible}">
            <CollectionView ItemsSource="{Binding Genres}" ItemsLayout="HorizontalList" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding .}"
                                Command="{Binding Path=BindingContext.SelectGenreCommand, Source={x:Reference AddMoviePageRoot}}"
                                CommandParameter="{Binding .}"
                                BackgroundColor="#1F2A38"
                                TextColor="White"
                                Padding="10"
                                CornerRadius="20"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Status Filter Buttons --><!--
        <Grid Grid.Row="2" ColumnDefinitions="*,*" Margin="10,0,10,10" ColumnSpacing="10">
            <Button Grid.Column="0"
                    Text="Show In Progress"
                    Command="{Binding ShowInProgressCommand}"
                    BackgroundColor="{Binding InProgressButtonColor}"
                    TextColor="{Binding InProgressTextColor}"
                    Padding="5"
                    CornerRadius="5"
                    HorizontalOptions="FillAndExpand"/>
            <Button Grid.Column="1"
                    Text="Show Completed"
                    Command="{Binding ShowCompletedCommand}"
                    BackgroundColor="{Binding CompletedButtonColor}"
                    TextColor="{Binding CompletedTextColor}"
                    Padding="5"
                    CornerRadius="5"
                    HorizontalOptions="FillAndExpand"/>
        </Grid>-->

        <!-- Movie Collection -->
        <CollectionView Grid.Row="3"
                    ItemsSource="{Binding FilteredMovies}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border BackgroundColor="#1F2A38" StrokeShape="RoundRectangle" StrokeThickness="1" Margin="15,5" Padding="10">
                        <VerticalStackLayout Spacing="10" Padding="10">
                            <Image Source="{Binding CoverPhoto}"   
                               HeightRequest="150"   
                               Aspect="AspectFill"   
                               HorizontalOptions="Center" />
                            <Label Text="{Binding Title}"   
                               FontSize="18"   
                               FontAttributes="Bold"   
                               TextColor="White"   
                               HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
