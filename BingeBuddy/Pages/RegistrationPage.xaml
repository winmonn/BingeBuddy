<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BingeBuddy.Pages.RegistrationPage"
             BackgroundColor="White">
    <ContentPage.Content>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Header Section -->
            <Grid BackgroundColor="#2C3E50" HeightRequest="150">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ImageButton Source="backbutton.png" 
                             HorizontalOptions="Start" 
                             VerticalOptions="Center" 
                             Margin="10" />
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="BingeBuddy" 
                           FontSize="36" 
                           FontAttributes="Bold" 
                           TextColor="White" />
                    <Image Source="logo.png" 
                           HeightRequest="100" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Grid>

            <!-- Registration Form -->
            <Label Text="Create an Account" 
                   FontSize="18" 
                   HorizontalOptions="Center" 
                   TextColor="Black" />
            <Entry Placeholder="Username" 
                   BackgroundColor="#E0E0E0" 
                   HeightRequest="50" 
                   FontSize="16" />
            <Entry Placeholder="Email" 
                   BackgroundColor="#E0E0E0" 
                   HeightRequest="50" 
                   FontSize="16" />
            <Entry Placeholder="Password" 
                   IsPassword="True" 
                   BackgroundColor="#E0E0E0" 
                   HeightRequest="50" 
                   FontSize="16" />
            <Entry Placeholder="Confirm Password" 
                   IsPassword="True" 
                   BackgroundColor="#E0E0E0" 
                   HeightRequest="50" 
                   FontSize="16" />
            <Button Text="Register" 
                    BackgroundColor="#2C3E50" 
                    TextColor="White" 
                    HeightRequest="50" 
                    FontSize="16"
                    Clicked="OnRegisterButtonClicked" />

            <!-- Footer Links -->
            <VerticalStackLayout HorizontalOptions="Center">
                <Button Text="Already have an account? Log in" 
                        FontSize="14" 
                        TextColor="Gray" 
                        BackgroundColor="Transparent" 
                        WidthRequest="235" 
                        Clicked="OnLoginRedirectButtonClicked" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>