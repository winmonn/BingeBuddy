<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BingeBuddy.Pages.ForgotPasswordPage"
             Title="Forgot Password"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Reset Password" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry x:Name="emailEntry" Placeholder="Email" BackgroundColor="#E0E0E0" HeightRequest="50" />
            <Entry x:Name="usernameEntry" Placeholder="Username" BackgroundColor="#E0E0E0" HeightRequest="50" />
            <Entry x:Name="newPasswordEntry" Placeholder="New Password" IsPassword="True" BackgroundColor="#E0E0E0" HeightRequest="50" />
            <Entry x:Name="repeatPasswordEntry" Placeholder="Repeat New Password" IsPassword="True" BackgroundColor="#E0E0E0" HeightRequest="50" />

            <Button Text="Reset Password"
                    BackgroundColor="#2C3E50"
                    TextColor="White"
                    Clicked="OnResetPasswordClicked"
                    HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
