<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BingeBuddy.Pages.ProfilePage"
             Title="Profile"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <StackLayout BackgroundColor="#2C3E50" Padding="20" Spacing="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ImageButton Source="icon_back.png" BackgroundColor="Transparent" HeightRequest="24"/>
                <Label Grid.Column="1" Text="Profile" TextColor="White" FontSize="20" HorizontalOptions="Center"/>
                <ImageButton Grid.Column="2" Source="icon_menu.png" BackgroundColor="Transparent" HeightRequest="24"/>
            </Grid>

            <StackLayout HorizontalOptions="Center" Spacing="5">
                <Image Source="default_avatar.png" HeightRequest="80" WidthRequest="80" Clip="Circle"/>
                <Label Text="@dpzc_" TextColor="White" FontAttributes="Bold" FontSize="18"/>
                <Label Text="Film enthusiast and amateur critic..." TextColor="White" FontSize="13" HorizontalTextAlignment="Center"/>
            </StackLayout>

            <Grid ColumnSpacing="20" Padding="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Column="0" HorizontalOptions="Center">
                    <Label Text="148" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                    <Label Text="Films" TextColor="White" FontSize="12"/>
                </StackLayout>
                <StackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Label Text="24" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                    <Label Text="Lists" TextColor="White" FontSize="12"/>
                </StackLayout>
                <StackLayout Grid.Column="2" HorizontalOptions="Center">
                    <Label Text="629" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                    <Label Text="Followers" TextColor="White" FontSize="12"/>
                </StackLayout>
            </Grid>
        </StackLayout>

        <!-- Tabs -->
        <StackLayout Grid.Row="1">
            <Grid ColumnDefinitions="*,*,*,*" Padding="10" BackgroundColor="White">
                <Button Text="Activity" Clicked="OnTabClicked" StyleId="ActivityTab"/>
                <Button Text="Lists" Clicked="OnTabClicked" StyleId="ListsTab" Grid.Column="1"/>
                <Button Text="Films" Clicked="OnTabClicked" StyleId="FilmsTab" Grid.Column="2"/>
                <Button Text="Watch Later" Clicked="OnTabClicked" StyleId="WatchLaterTab" Grid.Column="3"/>
            </Grid>

            <ContentView x:Name="TabContent" Padding="10"/>
        </StackLayout>
    </Grid>
</ContentPage>

