<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BingeBuddy.Pages.NotificationsPage"
             Title="Notifications"
             BackgroundColor="#F2F2F2">

    <VerticalStackLayout>
        <!-- Header -->
        <Grid BackgroundColor="#4B506D" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="icon_bell.png" HeightRequest="24" WidthRequest="24"/>
            <Label Text="Notification"
                   Grid.Column="1"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   Margin="10,0,0,0"/>
        </Grid>

        <!-- Notification List -->
        <CollectionView x:Name="NotificationsView"
                        ItemsSource="{Binding Notifications}"
                        Margin="10"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                           CornerRadius="12"
                           HasShadow="False"
                           BackgroundColor="{Binding IsHighlighted, Converter={StaticResource BoolToColorConverter}}"
                           BorderColor="LightGray"
                           Margin="0,5">
                        <Grid ColumnDefinitions="Auto,*,Auto"
                              RowDefinitions="Auto,Auto">
                            <Image Source="{Binding Icon}"
                                   HeightRequest="40"
                                   WidthRequest="40"
                                   Grid.RowSpan="2"
                                   VerticalOptions="Center"/>
                            <Label Text="{Binding Title}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   Grid.Column="1"/>
                            <Label Text="{Binding Time}"
                                   FontSize="12"
                                   TextColor="Gray"
                                   Grid.Column="2"
                                   HorizontalTextAlignment="End"/>
                            <Label Text="{Binding Message}"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="2"
                                   Grid.Row="1"
                                   TextColor="Gray"
                                   FontSize="14"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
