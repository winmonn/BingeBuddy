<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:BingeBuddy.Converters"
             xmlns:local="clr-namespace:BingeBuddy"
             x:Class="BingeBuddy.App">
    <Application.Resources>
        <ResourceDictionary>
            <local:StarColorConverter x:Key="StarColorConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:InListToBookmarkImageConverter x:Key="InListToBookmarkImageConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
