<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BingeBuddy.Pages.ProfilePage"
             Title="My Profile"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Top Header -->
        <Grid BackgroundColor="#738AA6" Padding="15" Row="0">
            <Label Text="My Profile"
                   FontSize="24"
                   FontFamily="Comic Sans MS"
                   HorizontalOptions="Center"
                   TextColor="White"/>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="20" Spacing="20">

                <!-- User Info -->
                <StackLayout Orientation="Horizontal" Spacing="15">
                    <Image Source="default_avatar.png"
                           HeightRequest="80"
                           WidthRequest="80"
                           Aspect="AspectFill"
                           VerticalOptions="Start"/>
                    <StackLayout>
                        <Label Text="Karen"
                               FontSize="22"
                               FontAttributes="Bold"/>
                        <Label Text="@karen_710"
                               TextColor="Gray"/>
                    </StackLayout>
                </StackLayout>

                <!-- Edit Profile -->
                <Button Text="Edit Profile"
                        BackgroundColor="#324de3"
                        TextColor="White"
                        CornerRadius="20"
                        HorizontalOptions="End"
                        WidthRequest="120"
                        Clicked="OnEditProfileClicked"/>

                <!-- New Status Editor -->
                <Frame BorderColor="LightGray" CornerRadius="10" Padding="10">
                    <StackLayout>
                        <Label Text="Share something..." FontSize="14"/>
                        <Editor x:Name="StatusEditor"
                                HeightRequest="60"
                                Placeholder="What's on your mind?" />
                        <Button Text="Post"
                                BackgroundColor="#324de3"
                                TextColor="White"
                                Clicked="OnPostStatusClicked"/>
                    </StackLayout>
                </Frame>

                <!-- Latest Post (Static UI for now) -->
                <Frame BackgroundColor="#F0F0F0" Padding="10" CornerRadius="8">
                    <StackLayout>
                        <Label Text="karen_710" FontAttributes="Bold" FontSize="14"/>
                        <Label Text="STAYED UP ALL NIGHT WATCHING SQUID GAME 2 WITH THE KIDS!!!"/>
                        <Label Text="2 mins ago..." FontSize="10" TextColor="Gray"/>

                        <!-- Interactions -->
                        <StackLayout Orientation="Horizontal" Spacing="15" Margin="0,5,0,0">
                            <Image Source="icon_like.png" HeightRequest="20" WidthRequest="20"/>
                            <Image Source="icon_comment.png" HeightRequest="20" WidthRequest="20"/>
                            <Label Text="2 likes ï¿½ 1 comment" FontSize="12" TextColor="Gray"/>
                        </StackLayout>

                        <!-- Sample Comment -->
                        <Frame Padding="5" BackgroundColor="#eeeeee" CornerRadius="8">
                            <Label Text="@john_doe: That sounds fun! Squid Game was wild." FontSize="12"/>
                        </Frame>

                        <!-- Add Comment -->
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                            <Entry Placeholder="Add a comment..." HorizontalOptions="FillAndExpand"/>
                            <Button Text="Send" FontSize="12" WidthRequest="60"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- Tabs -->
                <Grid ColumnDefinitions="*,*,*,*" Padding="0,10">
                    <Label Text="Overview"
                           TextColor="#324de3"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label Text="Favorites"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                    <Label Text="Social"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                    <Label Text="Notifications"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </Grid>

                <!-- Ratings Section -->
                <Label Text="| Ratings"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Label Text="No ratings yet" TextColor="Gray"/>

                <!-- Watchlist Section -->
                <Label Text="| Watchlist"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Label Text="No watchlist yet" TextColor="Gray"/>

                <!-- List Section -->
                <Label Text="| List"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Label Text="No list yet" TextColor="Gray"/>
            </StackLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <Grid Row="2"
              BackgroundColor="Black"
              Padding="10"
              ColumnSpacing="30"
              HeightRequest="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ImageButton Source="icon_home.png" Grid.Column="0" BackgroundColor="Transparent"/>
            <ImageButton Source="icon_search.png" Grid.Column="1" BackgroundColor="Transparent"/>
            <ImageButton Source="icon_bookmark.png" Grid.Column="2" BackgroundColor="Transparent"/>
            <ImageButton Source="icon_profile.png" Grid.Column="3" BackgroundColor="Transparent"/>
            <ImageButton Source="icon_more.png" Grid.Column="4" BackgroundColor="Transparent"/>
        </Grid>
    </Grid>
</ContentPage>
